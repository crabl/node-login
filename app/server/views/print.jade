
extends layout

block content
  div.navbar.navbar-fixed-top
    div.navbar-inner
      div.container-fluid
        ul#global-nav.nav.pull-left
          a(href='#').brand WCHFF 2013
          ul.nav
            li.active
              a(href='/print') Admin Home
            li
              a(href='/shirtAdmin') Shirt Report
            li
              a(href='/transportAdmin') Transport Report
        button#btn-logout.btn.btn-primary
          i.icon-lock.icon-white
          | Sign Out

  div.container(style='margin:100px 20px;')
    table.table.table-bordered.table-striped
      thead
        tr
          th(style='width:40px') #
          th(style='width:180px') Group Name
          th(style='width:200px') Admin E-mail
          th(style='width:180px') Username
          th Account Created
          th Participants
          td Dances
      tbody
      - for (var i = 0; i < accts.length; i++)
        tr
          td= i+1
          td <a href="/billingAdmin?user=#{accts[i].user}">#{accts[i].groupname}</a>
          td= accts[i].email
          td= accts[i].user
          td= accts[i].date
          td <a href="/participantsAdmin?user=#{accts[i].user}">#{accts[i].participants.length}</a>
          td <a href="/dancesAdmin?user=#{accts[i].user}">Dance Info &raquo;</a>