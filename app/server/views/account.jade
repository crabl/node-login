- user = typeof(udata) != 'undefined' ? udata : { }
- groupname = typeof(udata) != 'undefined' ? udata : { }
input(type='hidden', value= user._id)#userId

style(type='text/css')
  #pointer-arrow {
    position: relative;
    left: -130px;
    top: 90px;
    margin-top: -120px;
    display: none;
  }

#account-form-container
    #pointer-arrow
      img(src='http://static.wchff2013.com/dumbass-arrow.png')
    #tutorial-alert.alert(style='display:none; width: 390px;')
      span Welcome back,  #{user.name}! You can now use the links at the top of the page to complete your registration!
    form( method="post")#account-form.form-horizontal.well.span6h1
      h3 Group Administration
      p#sub1.subheading Please enter the primary contact information for your group:
      hr
      fieldset
        #name-cg.control-group
          label.control-label(for='name-tf') Your Name
          .controls
            input#name-tf.input-xlarge(type='text', name='name', value= user.name)
        #email-cg.control-group
          label.control-label(for='email-tf') E-mail
          .controls
            input#email-tf.input-xlarge(type='text', name='email', value= user.email)
        #groupname-cg.control-group
          label.control-label(for='groupname-tf') Dance Group Name
          .controls
            input#groupname-tf.input-xlarge.disabled(type='text', name='groupname', value=user.groupname)
        #clist-cg.control-group
          label.control-label(for='country-list') Country
          .controls
            select#country-list(name='country')
              each item in countries
                option(selected=item.name == user.country)= item.name
        hr
        p#sub2.subheading
        #user-cg.control-group
          label.control-label(for='user-tf') Username
          .controls
            input#user-tf.input-xlarge.disabled(type='text', name='user', value= user.user)
        #pass-cg.control-group
          label.control-label(for='pass-tf') Password
          .controls
            input#pass-tf.input-xlarge(type='password', name='pass', value='')
          .form-actions
          button(type='button')#account-form-btn1.btn
          button(type='submit')#account-form-btn2.btn.btn-success.pull-right

// display form errors in a custom modal window //

include modals/form-errors
