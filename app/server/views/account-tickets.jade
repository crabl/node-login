- user = typeof(udata) != 'undefined' ? udata : { }
- tickets = typeof(tdata) != 'undefined' ? tdata : { }
input(type='hidden', value= user._id)#userId

style(type='text/css').
  #account-form-container {
    width: 627px !important;
    margin: 100px auto;
  }
  
  .form-horizontal .control-label { width: 220px; margin-right: 10px;}
  .input-mini { margin: 0 10px; }
  .controls .help-inline { font-weight: normal; font-size: 10pt; }
  .table { font-size: 10pt; }
  .table tbody { font-weight: normal; }

#account-form-container
  form(method="post")#account-form.form-horizontal.well.span8
      h3 Tickets &amp; Passes
      strong NOTE: Do not forget to push the "Save Changes" button at the bottom of this form!
      hr
      fieldset
        #address
          h4 BILLING ADDRESS
          br
          #address-cg.control-group
            label.control-label(for='address-tf') Address
            .controls
              input#address-tf.input-xlarge(type='text', name='address', value=user.festivaldvd.address);
          #city-cg.control-group
            label.control-label(for='city-tf') City, Province
            .controls
              input#city-tf.input-xlarge(type='text', name='city', value=user.festivaldvd.city);
          #postalcode-cg.control-group
            label.control-label(for='postalcode-tf') Postal Code
            .controls
              input#postalcode-tf.input-xlarge(type='text', name='postalcode', value=user.festivaldvd.postalcode);
        hr
        #festivalpasses
          h4 FESTIVAL PASSES
          br
          #dancers-cg.control-group
            label.control-label(for='dancers-tf') Total Number of WCHFF Dancers
            .controls
              input#dancers-tf.input-mini(type='text', name='dancers', value=user.festivalpasses.dancers)
              span.help-inline x $70.00
          #administrators-cg.control-group
            label.control-label(for='administrators-tf') Number of Administrators (max: 2)
            .controls
              input#administrator-tf.input-mini(type='text', name='administrators', value=user.festivalpasses.administrators)
              span.help-inline x $85.00
          #chaperones-cg.control-group
            label.control-label(for='chaperones-tf') Number of Chaperones (max: 2)
            .controls
              input#chaperones-tf.input-mini(type='text', name='chaperones', value=user.festivalpasses.chaperones)
              span.help-inline x $85.00
          p 
            | For administrators and chaperones: Festival passes provide access to BOTH dance performances, the T&aacute;nch&aacute;z-es
            | and midnight snack each night, all workshops, festival transportation, and the Saturday evening musical performance.
            | Dancers will be allowed into dance performances only if seats are available after the show begins.
        hr
        #musicalperformance
          h4 SATURDAY EVENING MUSICAL PERFORMANCE
          br
          p Festival passes provide access to this performance, but you must order the complimentary ticket.
          #musicalperformance-cg.control-group
            label.control-label(for='musicalperformance-tf') Please provide
            .controls
              input#musicalperformance-tf.input-mini(type='text', name='musicalperformance', value=user.participants.length)
              span.help-inline tickets at <strong>no charge</strong> to our dance group.
        hr
        #sundaymeals
          h4 SUNDAY MEALS
          br
          #package-cg.control-group
            label.control-label(for='package-tf') Lunch &amp; Supper Package
            .controls
              input#package-tf.input-mini(type='text', name='package', value=user.meals.package)
              span.help-inline x $30.00
          #package-child-cg.control-group
            label.control-label(for='package-child-tf') Children's Meal Package
            .controls
              input#package-child-tf.input-mini(type='text', name='packagechild', value=user.meals.packagechild)
              span.help-inline x $15.00
        
        hr
        #tshirts
          h4 FESTIVAL T-SHIRTS
          br
          p Pro Team shirts are soft, tagless and moisture wicking.  They are available in men, ladies and youth sizing.  You have the option in choosing short sleeve or long sleeve. For a sizing chart, please <a href='http://static.wchff2013.com/sizechart.pdf' target="_blank">click here</a>.
          h4 Mens Shirts
          br
          table.table.table-bordered
            thead
              th Size
              th Mens Short Sleeve ($25.00)
              th Mens Long Sleeve ($30.00)
            tbody
              tr
                td X-Small
                td 
                  input#small-tf.input-mini(type='text', name='menshortxs', value=user.tshirts.menshortxs)
                td 
                  input#small-tf.input-mini(type='text', name='menlongxs', value=user.tshirts.menlongxs)
              tr
                td Small
                td 
                  input#small-tf.input-mini(type='text', name='menshorts', value=user.tshirts.menshorts)
                td 
                  input#small-tf.input-mini(type='text', name='menlongs', value=user.tshirts.menlongs)
              tr
                td Medium
                td 
                  input#small-tf.input-mini(type='text', name='menshortm', value=user.tshirts.menshortm)
                td 
                  input#small-tf.input-mini(type='text', name='menlongm', value=user.tshirts.menlongm)
              tr
                td Large
                td 
                  input#small-tf.input-mini(type='text', name='menshortl', value=user.tshirts.menshortl)
                td 
                  input#small-tf.input-mini(type='text', name='menlongl', value=user.tshirts.menlongl)
              tr
                td X-large
                td 
                  input#small-tf.input-mini(type='text', name='menshortxl', value=user.tshirts.menshortxl)
                td 
                  input#small-tf.input-mini(type='text', name='menlongxl', value=user.tshirts.menlongxl)
              tr
                td XX-large
                td 
                  input#small-tf.input-mini(type='text', name='menshortxxl', value=user.tshirts.menshortxxl)
                td 
                  input#small-tf.input-mini(type='text', name='menlongxxl', value=user.tshirts.menlongxxl)
              tr
                td XXX-L (+$5)
                td 
                  input#small-tf.input-mini(type='text', name='menshortxxxl', value=user.tshirts.menshortxxxl)
                td 
                  input#small-tf.input-mini(type='text', name='menlongxxxl', value=user.tshirts.menlongxxxl)
                
          br
          h4 Ladies Shirts
          br
          table.table.table-bordered
            thead
              th Size
              th Ladies Short Sleeve ($25.00)
              th Ladies Long Sleeve ($30.00)  
            tbody
              tr
                td X-Small
                td 
                  input#small-tf.input-mini(type='text', name='ladiesshortxs', value=user.tshirts.ladiesshortxs)
                td 
                  input#small-tf.input-mini(type='text', name='ladieslongxs', value=user.tshirts.ladieslongxs)
              tr
                td Small
                td 
                  input#small-tf.input-mini(type='text', name='ladiesshorts', value=user.tshirts.ladiesshorts)
                td 
                  input#small-tf.input-mini(type='text', name='ladieslongs', value=user.tshirts.ladieslongs)
              tr
                td Medium
                td 
                  input#small-tf.input-mini(type='text', name='ladiesshortm', value=user.tshirts.ladiesshortm)
                td 
                  input#small-tf.input-mini(type='text', name='ladieslongm', value=user.tshirts.ladieslongm)
              tr
                td Large
                td 
                  input#small-tf.input-mini(type='text', name='ladiesshortl', value=user.tshirts.ladiesshortl)
                td 
                  input#small-tf.input-mini(type='text', name='ladieslongl', value=user.tshirts.ladieslongl)
              tr
                td X-large
                td 
                  input#small-tf.input-mini(type='text', name='ladiesshortxl', value=user.tshirts.ladiesshortxl)
                td 
                  input#small-tf.input-mini(type='text', name='ladieslongxl', value=user.tshirts.ladieslongxl)
              tr
                td XX-large
                td 
                  input#small-tf.input-mini(type='text', name='ladiesshortxxl', value=user.tshirts.ladiesshortxxl)
                td 
                  input#small-tf.input-mini(type='text', name='ladieslongxxl', value=user.tshirts.ladieslongxxl)
              tr
                td XXX-L (+$5)
                td 
                  input#small-tf.input-mini(type='text', name='ladiesshortxxxl', value=user.tshirts.ladiesshortxxxl)
                td 
                  input#small-tf.input-mini(type='text', name='ladieslongxxxl', value=user.tshirts.ladieslongxxxl)
          
          br 
          h4 Youth Shirts 
          br
          table.table.table-bordered
            thead
              th Size
              th Youth Short Sleeve ($20.00)
              th Youth Long Sleeve ($25.00)
            tbody
              tr
                td Small
                td 
                  input#small-tf.input-mini(type='text', name='youthshorts', value=user.tshirts.youthshorts)
                td 
                  input#small-tf.input-mini(type='text', name='youthlongs', value=user.tshirts.youthlongs)
              tr
                td Medium
                td 
                  input#small-tf.input-mini(type='text', name='youthshortm', value=user.tshirts.youthshortm)
                td 
                  input#small-tf.input-mini(type='text', name='youthlongm', value=user.tshirts.youthlongm)
              tr
                td Large
                td 
                  input#small-tf.input-mini(type='text', name='youthshortl', value=user.tshirts.youthshortl)
                td 
                  input#small-tf.input-mini(type='text', name='youthlongl', value=user.tshirts.youthlongl)
              tr
                td X-large
                td 
                  input#small-tf.input-mini(type='text', name='youthshortxl', value=user.tshirts.youthshortxl)
                td 
                  input#small-tf.input-mini(type='text', name='youthlongxl', value=user.tshirts.youthlongxl)

        hr
        #festivaldvd
          h4 FESTIVAL DVD
          br
          #musicalperformancedvd-cg.control-group
            label.control-label(for='musicalperformancedvd-tf') Musical Performance
            .controls
              input#musicalperformancedvd-tf.input-mini(type='text', name='musicalperformancedvd', value=user.festivaldvd.musicalperformance)
              span.help-inline x $25.00
          #sundayafternoondvd-cg.control-group
            label.control-label(for='sundayafternoondvd-tf') Sunday Afternoon Performance
            .controls
              input#sundayafternoondvd-tf.input-mini(type='text', name='sundayafternoondvd', value=user.festivaldvd.sundayafternoon)
              span.help-inline x $25.00
          #sundayeveningdvd-cg.control-group
            label.control-label(for='sundayeveningdvd-tf') Sunday Evening Performance
            .controls
              input#sundayeveningdvd-tf.input-mini(type='text', name='sundayeveningdvd', value=user.festivaldvd.sundayevening)
              span.help-inline x $25.00
        hr
        #guesttickets
          h4 GUEST TICKETS (FOR SEPARATE PERFORMANCES)
          br
          #guesttickets-cg.control-group
            table.table.table-bordered
              thead
                tr
                  th Event Name
                  th Adult ($20.00) 
                  th Student / Senior ($17.50) 
                  th Child 12 and under ($10.00)
              tbody
                tr
                  td Musical Performance - Saturday Evening (without festival pass)
                  td 
                    input#mpadult-tf.input-mini(type='text', name='musicalperformanceadult', value=tickets.musicalperformance.adult)
                  td 
                    input#mpstudentsenior-tf.input-mini(type='text', name='musicalperformancestudentsenior', value=tickets.musicalperformance.studentsenior)
                  td 
                    input#mpchild-tf.input-mini(type='text', name='musicalperformancechild', value=tickets.musicalperformance.child)
                tr
                  td Gala Dance Performance - Sunday Afternoon
                  td
                    input#gpaadult-tf.input-mini(type='text', name='galaafternoonadult', value=tickets.galaperformance.afternoon.adult)
                  td
                    input#gpastudentsenior-tf.input-mini(type='text', name='galaafternoonstudentsenior', value=tickets.galaperformance.afternoon.studentsenior)
                  td
                    input#gpachild-tf.input-mini(type='text', name='galaafternoonchild', value=tickets.galaperformance.afternoon.child)
                tr
                  td Gala Dance Performance - Sunday Evening
                  td
                    input#gpeadult-tf.input-mini(type='text', name='galaeveningadult', value=tickets.galaperformance.evening.adult)
                  td
                    input#gpestudentsenior-tf.input-mini(type='text', name='galaeveningstudentsenior', value=tickets.galaperformance.evening.studentsenior)
                  td
                    input#gpechild-tf.input-mini(type='text', name='galaeveningchild', value=tickets.galaperformance.evening.child)
        hr
        #guestpackage
          h4 GUEST TICKETS (PACKAGE PRICE)
          br
          p 
            | You may choose to purchase guest tickets for individual performances or as part of a package.
            | The package price includes admission to <strong>all three</strong> theatre performances. 
            | Please remember to keep a list of all guests who have ordered tickets in order to facilitate their distribution.
          table.table.table-bordered
            thead
              tr
                th Adult ($50.00)
                th Student / Senior ($42.50)
                th Child ($27.50)
            tbody
              tr
                td
                  input#gppadult-tf.input-mini(type='text', name='packagepriceadult', value=tickets.packageprice.adult)
                td
                  input#gppstudentsenior-tf.input-mini(type='text', name='packagepricestudentsenior', value=tickets.packageprice.studentsenior)
                td
                  input#gppchild-tf.input-mini(type='text', name='packagepricechild', value=tickets.packageprice.child)
        hr
        #tanchaz
          h4 T&Aacute;NCH&Aacute;Z
          br
          table.table.table-bordered
            thead
              tr
                th Friday ($10.00)
                th Saturday ($10.00)
                th Sunday ($10.00)
            tbody
              tr
                td
                  input#tanchazfriday.input-mini(type='text', name='tanchazfriday', value=tickets.tanchaz.friday)
                td
                  input#tanchazsaturday.input-mini(type='text', name='tanchazsaturday', value=tickets.tanchaz.saturday)
                td
                  input#tanchazsunday.input-mini(type='text', name='tanchazsunday', value=tickets.tanchaz.sunday)
        br
        button(type='submit')#account-form-btn2.btn.btn-success.pull-right

