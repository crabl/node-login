
extends layout

block content
  div.navbar.navbar-fixed-top
    div.navbar-inner
      div.container-fluid
        ul#global-nav.nav.pull-left
          a(href='#').brand WCHFF 2013
          ul.nav
            li.active
              a(href='/print') Admin Home
            li
              a(href='/shirtAdmin') Shirt Report
        button#btn-logout.btn.btn-primary
          i.icon-lock.icon-white
          | Sign Out

  div.container(style='margin:100px 20px;')
    h1 Participants
    h2 
       em #{groupInfo.groupname}
    br
    table.table.table-bordered.table-striped
      thead
        tr
          th Last Name
          th First Name
          th Date of Birth
          th Gender
          th Role
       for participant in groupInfo.participants
         tr
           td #{participant.lastname}
           td #{participant.firstname}
           td #{participant.dob}
           td #{participant.gender}
           td #{participant.role}
